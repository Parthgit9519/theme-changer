JS=>......................

let form = document.querySelector("#form");
let inpName = document.querySelector("#inp");
let inpNumber = document.querySelector("#inp1");
let gmail = document.querySelector("#inp2");
let url = document.querySelector("#url");
let sub = document.querySelector("#sub");
let pattern = /^[a-zA-Z0-9._%+-]+@gmail\.com$/;
let head = document.querySelector(".text");

form.addEventListener("submit", function (dets) {
  dets.preventDefault();
  if (inpName.value === "") {
    alert("name blank");
  } else {
    head.textContent = inpName.value;
  }

  if (inpNumber.value.length !== 10) {
    alert("invalid");
  } else {
    head.textContent = inpNumber.value;
  }

  if (!pattern.test(gmail.value)) {
    alert("Please enter a valid Gmail address");
  } else {
    head.textContent = gmail.value;
  }

  if (!url.value.includes("https://")) {
    alert("invalid url");
  } else {
    head.textContent = url.value;
  }
  //     let text = document.querySelector(".text").textContent = inpName.value
  // let text1 = document.querySelector(".text").textContent = inpNumber.value

  inpName.value = "";
  inpNumber.value = "";
  gmail.value = "";
  url.value = "";
});
